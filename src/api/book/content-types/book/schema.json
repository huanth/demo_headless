{
  "kind": "collectionType",
  "collectionName": "books",
  "info": {
    "singularName": "book",
    "pluralName": "books",
    "displayName": "Book" 
  },
  "options": {
    "draftAndPublish": true
  },
  "pluginOptions": {},
  "attributes": {
    "name": {
      "type": "string",
      "required": true,
      "maxLength": 100
    },
    "sku": {
      "type": "string",
      "required": true,
      "unique": true
    },
    "image": {
      "allowedTypes": [
        "images"
      ],
      "type": "media",
      "multiple": false,
      "required": true
    },
    "author": {
      "type": "string",
      "required": true,
      "unique": false,
      "maxLength": 50
    },
    "price": {
      "type": "string",
      "required": true
    },
    "description": {
      "type": "text",
      "maxLength": 100
    },
    "category": {
      "type": "string",
      "required": true
    },
    "year": {
      "type": "string",
      "required": true
    },
    "danhgia": {
      "type": "json"
    }
  }
}
